##############################
#### DEVELOPMENT SETTINGS ####
##############################
[applicationContext = Development*]
    config.compressJs = 0
    config.concatenateCss = 0
    config.concatenateJs = 0
    config.compressCss = 0
    plugin.bootstrap_package.settings.cssSourceMapping = 1
[end]
[applicationContext = Production*]
    config.compressJs = 1
    config.concatenateCss = 1
    config.concatenateJs = 1
    config.compressCss = 1
    plugin.bootstrap_package.settings.cssSourceMapping = 0
[end]

############
### PAGE ###
############
page {
    logo {
        file = EXT:skom_sitepackage/Resources/Public/Images/logo.svg
        fileInverted = EXT:skom_sitepackage/Resources/Public/Images/logo-inverted.svg
        height = 52
        width = 192
        alt = SKom Sitepackage
        linktitle = SKom Sitepackage
    }
    favicon {
        file = EXT:skom_sitepackage/Resources/Public/Icons/favicon.ico
    }
    fluidtemplate {
        layoutRootPath = EXT:skom_sitepackage/Resources/Private/Layouts/Page/
        partialRootPath = EXT:skom_sitepackage/Resources/Private/Partials/Page/
        templateRootPath = EXT:skom_sitepackage/Resources/Private/Templates/Page/
    }
}


##################
### EXTENSIONS ###
##################
plugin.bootstrap_package {
    view {
        layoutRootPath = EXT:skom_sitepackage/Resources/Private/Layouts/
        partialRootPath = EXT:skom_sitepackage/Resources/Private/Partials/
        templateRootPath = EXT:skom_sitepackage/Resources/Private/Templates/
    }
}


########################
### CONTENT ELEMENTS ###
########################
plugin.bootstrap_package_contentelements {
    view {
        layoutRootPath = EXT:skom_sitepackage/Resources/Private/Layouts/ContentElements/
        partialRootPath = EXT:skom_sitepackage/Resources/Private/Partials/ContentElements/
        templateRootPath = EXT:skom_sitepackage/Resources/Private/Templates/ContentElements/
    }
}

#############
### Theme ###
#############
[treeLevel = 0]
page.theme.navigation.style = default-transition
[end]
page.theme.navigation.type = top
page.preloader.backgroundColor = #75A75A
page.preloader.logo.file = fileadmin/introduction/images/introduction-package-inverted.svg
# TODO: Was ist das?
#page.theme.meta.enable = 0
# TODO: In cookiebanner config auslagern

page.theme.cookieconsent.enable = 0
################################
### BOOTSTRAP SCSS CONSTANTS ###
################################
plugin.bootstrap_package.settings.scss {
    primary = #a60606
    secondary = #013859
}
